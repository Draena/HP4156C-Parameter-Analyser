			rows: 4
			cols: 8
			padding: 10
			spacing: 10
			id: SweepBox
			Label:
				text: 'SMU1'
				halign: 'center'
				valign: 'middle'
				shorten: True
				text_size: self.size
				height: '32dp'
				width: '80dp'
			BoxLayout:
				Button:
					id: smu1_select
					text: "   -   "
					on_release: smu1_dropdown.open(self)
					size_hint_y: None
					height: '32dp'
				Widget:
					on_parent: smu1_dropdown.dismiss()
				DropDown:
					id: smu1_dropdown
					on_select: root.smu1_text_update(args[1])
					Button:
						text: 'Constant'
						size_hint_y: None
						height: '32dp'
						on_release: smu1_dropdown.select('Constant')
					Button:
						text: 'Variable'
						size_hint_y: None
						height: '32dp'
						on_release: smu1_dropdown.select('Variable')
					Button:
						text: 'Common'
						size_hint_y: None
						height: '32dp'
						on_release: smu1_dropdown.select('Common')
					Button:
						text: 'Disabled'
						size_hint_y: None
						height: '32dp'
						on_release: smu1_dropdown.select('Disabled')
			TextInput:
				id: SMU1_text1
				size_hint_y: None
				height: '32dp'
				multiline: False
				text: 'Start'
			TextInput:
				id: SMU1_text2
